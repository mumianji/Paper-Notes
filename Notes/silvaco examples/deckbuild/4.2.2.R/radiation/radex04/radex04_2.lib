/*
 * Generation rate as a funcition of position (3D)
 * Statement: BEAM
 * Parameter: F3.RADIATE
 * Arguments:
 * x          location x (microns)
 * y          location y (microns)
 * z          location y (microns)
 * t          time (seconds )
 * *rat       generation rate per cc per sec.
 */
int radiate3(double x, double y, double z, double t, double *rat)
{
        double gen1,rad,xlen,ylen,zlen;
	gen1=0.0;
	xlen=x-5.0;
	ylen=y-5.0;
	zlen=z-5.0;
	rad=sqrt(xlen*xlen+zlen*zlen);

	if ( ylen<0 ) gen1=1.0e15/(rad*rad+0.1) ;

/*	if (abs(rad) < 1 ) 
   		printf("%g %g %g %g %g\n",x,y,z,rad,gen1);  */

	*rat = gen1;
	return(0);
}
	
